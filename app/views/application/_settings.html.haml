#settings.container{ :style => 'display:none;' }
  .top-links
    .pull-left
      %button.btn.btn-warning{ :type => 'button', 'data-logout' => 'true', :title => 'Logout' }
        %i.icon-off.icon-white
    .pull-right
      %button#settings_cancel_btn.btn{ :type => 'button' } Cancel
    .clearfix

  .well
    %h2
      Settings
      %small#settings_email_placeholder

    #preferences.pushed-down
      = form_tag(users_path, :method => :put, :remote => true, :id => 'preferences_form') do
        = hidden_field_tag(:api_key, '', :id => 'preferences_api_key')
        %strong Default Password Length
        %p
          %select#preferences_password_length.input-medium{ :name => 'password_length' }
            - 6.upto(32).each do |i|
              %option{ :class => "length-#{i}", :value => i }= "#{i} Characters"
        %strong Special Characters
        .inline-radios
          = label_tag(nil, :class => 'radio inline') do
            = radio_button_tag(:special_chars, '1', false, :id => 'preferences_special_chars_enabled')
            Include
          = label_tag(nil, :class => 'radio inline') do
            = radio_button_tag(:special_chars, '0', false, :id => 'preferences_special_chars_disabled')
            Don't Include
        %strong Auto-lock
        %p
          %select#preferences_idle_timeout.input-medium{ :name => 'idle_timeout' }
            %option{ :value => 0 } Never
            %option{ :value => 1 } 1 Minute
            - 2.upto(5).each do |i|
              %option{ :value => i }= "#{i} Minutes"
            - 2.upto(11).each do |i|
              - val = i * 5
              %option{ :value => val }= "#{val} Minutes"
            %option{ :value => 60 } 1 Hour
        %strong Auto-backup on Change
        .inline-radios
          = label_tag(nil, :class => 'radio inline') do
            = radio_button_tag(:auto_backup, '1', false, :id => 'preferences_auto_backup_enabled')
            Enabled
          = label_tag(nil, :class => 'radio inline') do
            = radio_button_tag(:auto_backup, '0', false, :id => 'preferences_auto_backup_disabled')
            Disabled
        %strong Multi-factor Authentication
        .inline-radios
          = label_tag(nil, :class => 'radio inline') do
            = radio_button_tag(:otp_enabled, '1', false, :id => 'preferences_mfa_enabled')
            Enabled
          = label_tag(nil, :class => 'radio inline') do
            = radio_button_tag(:otp_enabled, '0', false, :id => 'preferences_mfa_disabled')
            Disabled
          #mfa_configure{ :style => 'display:none;' }
            %p Use the following QR code or secret key to add Passmaster to Google Authenticator. It is a good idea to save the secret key in a safe location in case you lose your phone as it will be necessary to regain access to your accounts.
            #qr_code
            %strong Secret Key:
            %strong#otp_secret
        %p= submit_tag('Save Preferences', :class => 'btn btn-primary', :id => 'preferences_btn')

    #change_email.pushed-down
      %hr
      %h4 Email Address
      %p Change the email address you use to access your accounts.
      .alert.alert-warning
        %strong Warning:
        You will not be able to access your accounts until you verify your new email address.
      = form_tag(users_path, :method => :put, :remote => true, :id => 'change_email_form') do
        = hidden_field_tag(:api_key, '', :id => 'change_email_api_key')
        %p{ :style => 'display:none;' }= password_field_tag(:hack_field, '', :id => nil)
        %p= email_field_tag(:email, '', :placeholder => 'Email Address', :class => 'input-xlarge', :id => 'change_email_email', :required => true)
        %p= submit_tag('Change Email', :class => 'btn btn-primary', :id => 'change_email_btn')

    #master_password.pushed-down
      %hr
      %h4 Master Password
      %p The Master Password is the only password you will need to remember. It is used to decrypt the rest of your individual account passwords. Enter a strong master password below.
      .alert.alert-warning
        %strong Warning:
        It is extremely important that you remember this password as it CANNOT be recovered!
      %form#master_password_form
        %p= password_field_tag(:old_passwd, '', :placeholder => 'Current Password', :class => 'input-xlarge', :id => 'master_password_old_passwd', :required => true)
        %p= password_field_tag(:passwd, '', :placeholder => 'New Password', :class => 'input-xlarge', :id => 'master_password_passwd', :required => true)
        %p= password_field_tag(:passwd2, '', :placeholder => 'Confirm New Password', :class => 'input-xlarge', :id => 'master_password_passwd2', :required => true)
        %p= submit_tag('Set Master Password', :class => 'btn btn-primary', :id => 'master_password_btn')
      = form_tag(users_path, :method => :put, :remote => true, :id => 'master_password_hidden_form', :style => 'display:none;') do
        = hidden_field_tag(:api_key, '', :id => 'master_password_hidden_api_key')
        = hidden_field_tag(:new_api_key, '', :id => 'master_password_hidden_new_api_key')
        = hidden_field_tag(:encrypted_data, '', :id => 'master_password_hidden_encrypted_data')
        = hidden_field_tag(:schema_version, '', :id => 'master_password_hidden_schema_version')

    #backup_accounts.pushed-down
      %hr
      %h4 Backup Accounts
      %p Use one of the buttons below to backup your encrypted accounts database to a file on your computer or to your email. You can then restore your accounts from that file if necessary.
      .alert.alert-info
        %strong Note:
        Backups are locked with your current Master Password and you will need the password in order to restore the backup.
      %p
        %button#backup_accounts_file_btn.btn.btn-primary{ :type => 'button' } File Backup
        = link_to('Email Backup', '/users', :remote => true, :id => 'backup_accounts_email_btn', :class => 'btn btn-inverse')

    #restore_accounts.pushed-down
      %hr
      %h4 Restore Accounts
      %p Select your backup file and enter the Master Password that was used to create the backup.
      .alert.alert-danger
        %strong Danger:
        This will replace ALL of your current accounts and reset your Master Password to whatever they were when the backup was created. You might want to make a backup of your current accounts before restoring.
      %form#restore_accounts_form{ :enctype => 'multipart/form-data' }
        %p= file_field_tag(:backup_file, :accept => 'text/plain', :id => 'restore_accounts_backup_file')
        %p= password_field_tag(:passwd, '', :placeholder => 'Backup Password', :class => 'input-xlarge', :id => 'restore_accounts_passwd', :required => true)
        %p{ :style => 'display:none;' }= password_field_tag(:hack_field, '', :id => nil)
        %p= submit_tag('Restore', :class => 'btn btn-danger', :id => 'restore_accounts_btn')
