#accounts.container{ :style => 'display:none;' }
  .pull-right
    = link_to('Reload', users_path, :remote => true, :id => 'reload_link')
    %span{ :id => 'reload_spinner', :style => 'display:none;' } Reloading
    |
    %a{ :href => '#', 'data-logout' => 'true' } Logout
  .clearfix

  .well
    = render 'read_only'
    %h1
      Accounts
      %small#accounts_email_placeholder

    #unlock_accounts{ :style => 'display:none;' }
      %p Accounts are locked. Enter the Master Password to unlock.
      %form{ :id => 'unlock_accounts_form' }
        %p= password_field_tag(:passwd, '', :placeholder => 'Master Password', :class => 'input-xlarge', :id => 'unlock_accounts_passwd', :required => 'true')
        %p= submit_tag('Unlock', :class => 'btn btn-primary btn-large', :id => 'unlock_accounts_btn')

  #accounts_list{ :style => 'display:none;' }
    %p
      = button_tag('Add Account', :class => 'btn btn-success', :id => 'add_account_btn')
      = button_tag('Set Master Password', :class => 'btn btn-inverse', :id => 'set_master_password_btn')
    %p= text_field_tag(:search, '', :placeholder => 'Search', :autocomplete => 'off', :autocorrect => 'off', :autocapitalize => 'off', :class => 'input-xlarge', :id => 'accounts_list_search')
    #account_tiles
      .account-tile.pull-left.template{ :style => 'display:none;' }
        .read
          %table
            %thead
              %tr
                %th.account{ :colspan => 2 }
            %tbody
              %tr
                %td
                  .input-prepend.click-to-select
                    %span.add-on U:
                    %input.username{ :type => :text, :name => :username, :placeholder => 'Username' }
                  .input-prepend.input-append.click-to-select
                    %span.add-on P:
                    %input.password{ :type => :text, :name => :password, :placeholder => 'Password' }
                    %button.btn.password{ :type => 'button', 'data-show-password' => 'true' } Show
                %td.edit-link
                  %button.btn.btn-primary{ :type => :submit, 'data-account-edit' => 'true' } Edit
              %tr
                %td{ :colspan => 2 }
                  %pre.notes
        .write
          %form
            .input-prepend
              %span.add-on A:
              %input.account{ :type => :text, :name => :account, :placeholder => 'Account Name', :required => 'true' }
            .input-prepend
              %span.add-on U:
              %input.username{ :type => :text, :name => :username, :placeholder => 'Username', :autocomplete => 'off', :autocorrect => 'off', :autocapitalize => 'off' }
            .input-prepend
              %span.add-on P:
              %input.password{ :type => :text, :name => :password, :placeholder => 'Password', :autocomplete => 'off', :autocorrect => 'off', :autocapitalize => 'off' }
            %div.form-inline
              %button.btn.btn-inverse{ :type => 'button', 'data-password-generator' => 'true' } Generate
              %label.checkbox
                %input.special-characters{ :type => 'checkbox', :checked => 'checked' }
                %span Special Chars
            %div
              %textarea.notes.input-block-level{ :name => :notes, :placeholder => 'Notes', :rows => '3' }
            .actions
              %input.btn.btn-primary{ :type => :submit, :name => :commit, :value => 'Save' }
              %a.btn{ :href => '#', 'data-cancel' => 'true' } Cancel
              %button.btn.btn-danger.pull-right{ :type => :submit, 'data-account-delete' => 'true', :style => 'display:none;' } Delete
              .clearfix
        .update{ :style => 'display:none;' }
          = form_tag(users_path, :method => :put, :remote => true, :id => nil) do
            = hidden_field_tag(:api_key, '', :id => nil, :class => 'api-key')
            = hidden_field_tag(:encrypted_data, '', :id => nil, :class => 'encrypted-data')
            = hidden_field_tag(:schema_version, '', :id => nil, :class => 'schema-version')
    .clearfix
