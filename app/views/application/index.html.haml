#alert_messages.container
  #offline_mode.alert.alert-error{ :style => 'display:none;' }
    %strong{ 'data-i18n-html' => 'general.connection_failed' } Connection Failed!
    %span{ 'data-i18n-html' => 'general.offline_mode' } Offline-mode enabled.
    %a.reload-link{ :href => '#', 'data-i18n-html' => 'general.try_reconnect' } Try reconnecting...

  #idle_timeout.alert.alert-info{ :style => 'display:none;' }
    %strong{ 'data-i18n-html' => 'general.idle_alert' } Idle Alert!
    %span{ 'data-i18n-html' => 'general.idle_alert_detail' } Accounts will automatically lock in one minute due to inactivity.

  #cache_update_ready.alert.alert-warn{ :style => 'display:none;' }
    %strong{ 'data-i18n-html' => 'general.updates_available' } New Updates Available!
    %a.reload-link{ :href => '#', 'data-i18n-html' => 'general.updates_available_detail' } Click here for the latest version.

#notification_container.container
  #notification.alert.alert-info{ :style => 'display:none;' }

= render 'overview'
= render 'verify'
= render 'configure'
= render 'settings'
= render 'accounts'

= link_to('', init_session_path, :remote => true, :id => 'init_session_link', :style => 'display:none;')

= form_tag(otp_sessions_path, :method => :post, :remote => true, :id => 'otp_session_form', :style => 'display:none;') do
  = hidden_field_tag(:user_id, '', :id => 'otp_session_user_id')
  = hidden_field_tag(:api_key, '', :id => 'otp_session_api_key')
  = hidden_field_tag(:otp, '', :id => 'otp_session_otp')
