# Passmaster Nginx configuration

upstream passmaster {
  server unix:/home/ubuntu/passmaster/tmp/sockets/nginx.socket;
}

proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
proxy_set_header Host $http_host;
proxy_redirect off;

server {
  listen 80;
  server_name passmaster.io;
  root /home/ubuntu/passmaster/public;
  client_max_body_size 16m;
  keepalive_timeout 5;

  try_files $uri @unicorn;

  location @unicorn {
    proxy_pass http://passmaster;
  }

  error_page 404 /404.html;
  error_page 422 /422.html;
  error_page 500 502 503 504 /500.html;
}

server {
  listen 80 default_server;

  location = /healthz {
    proxy_pass http://passmaster;
  }

  location / {
    access_log /var/log/nginx/spam.log;
    return 410;
  }
}
