# Passmaster Nginx configuration

upstream passmaster {
  server unix:/home/ubuntu/passmaster/tmp/sockets/nginx.socket;
}

upstream s3_assets {
  server passmaster.s3.amazonaws.com;
}

server {
  listen 443 ssl;
  server_name passmaster.io;
  root /home/ubuntu/passmaster/public;

  if (-f $document_root/maint.html) {
    return 503;
  }

  try_files $uri @unicorn;

  location ^~ /assets/ {
    expires max;
    proxy_set_header Host passmaster.s3.amazonaws.com;
    proxy_pass http://s3_assets;
  }

  location @unicorn {
    proxy_pass http://passmaster;
  }

  location @error503 {
    try_files /maint.html /500.html;
  }

  error_page 404 /404.html;
  error_page 422 /422.html;
  error_page 500 502 503 504 /500.html;
}

server {
  listen 80;
  server_name www.passmaster.io;
  rewrite ^ https://passmaster.io$request_uri? permanent;
}

server {
  listen 443 ssl;
  server_name www.passmaster.io;
  rewrite ^ https://passmaster.io$request_uri? permanent;
}
